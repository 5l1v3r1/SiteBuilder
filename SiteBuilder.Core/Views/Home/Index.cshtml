@using SiteBuilder.DataEntity.Models;
@using SiteBuilder.Core.Helpers
@using SiteBuilder.Tenants.Helpers;

@{
    ViewData["Title"] = "Startseite";

    Tenant tenant = new Tenant();
    tenant.TenantId = Guid.Parse("E8BCB64E-1143-46E7-9CD8-420D686C124A");

    var model = Context.Session.GetObjectFromJson<Tenant>("Tenant");
    if (model != null)
    {
        tenant = model;
    }

    var settings = tenant.GetSiteSettings();
}

<div class="text-center">
    <h1 class="display-4">@settings.Title</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
